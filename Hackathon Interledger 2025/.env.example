# Twilio - recomendable usar API Keys (API Key SID + Secret) en prod
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=your_api_key_secret
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token  # used for webhook validation
VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_FROM=whatsapp:+521XXXXXXXXXXX

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/walletdb

# Secrets
HMAC_SECRET=change_this_secret_strong
JWT_SECRET=change_jwt_secret

# App runtime
APP_HOST=0.0.0.0
APP_PORT=8000

# OTP / rate limiting
OTP_MAX_ATTEMPTS=5
OTP_LOCK_MINUTES=5
RATE_LIMIT_WHATSAPP_PER_MINUTE=30
RATE_LIMIT_VERIFY_PER_MINUTE=10

# NLU configuration
# NLU_PROVIDER can be: rule (default), openai, rasa
NLU_PROVIDER=rule

# OpenAI-compatible NLU (optional)
# TODO: set these only in secure environments (never commit real keys)
NLU_OPENAI_API_BASE=https://api.openai.com/v1
NLU_OPENAI_API_KEY=sk-...
NLU_OPENAI_MODEL=gpt-3.5-turbo

# Rasa NLU (optional)
NLU_RASA_URL=http://localhost:5005/model/parse

# Bank API (optional HTTP/OAuth2 mode)
# BANK_CLIENT_MODE can be: local (default, in-process SQLAlchemy) or http
BANK_CLIENT_MODE=local
BANK_API_BASE_URL=https://bank-sandbox.example.com
BANK_API_TOKEN_URL=https://bank-sandbox.example.com/oauth2/token
BANK_API_CLIENT_ID=your_client_id
BANK_API_CLIENT_SECRET=your_client_secret
BANK_API_SCOPE=accounts balance transfers

# TLS / mTLS for bank API
# BANK_API_TLS_CA can point to a CA bundle; BANK_API_TLS_CERT/KEY for mTLS client certs
BANK_API_TLS_CA=/etc/ssl/certs/ca.pem
BANK_API_TLS_CERT=/etc/ssl/certs/client.pem
BANK_API_TLS_KEY=/etc/ssl/private/client.key
